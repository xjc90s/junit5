{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>junit-team/renovate-config',
  ],
  baseBranchPatterns: [
    'main',
    'docs-site'
  ],
  packageRules: [
    {
      matchCurrentValue: '/^2\\./',
      allowedVersions: '(,3.0)',
      matchPackageNames: [
        'org.codehaus.groovy:{/,}**',
      ],
    },
    {
      matchCurrentValue: '/^1\\./',
      allowedVersions: '/^1\\..*-groovy-2\\.*/',
      matchPackageNames: [
        'org.spockframework:{/,}**',
      ],
    },
    {
      allowedVersions: '!/-SNAPSHOT$/',
      matchPackageNames: [
        'org.opentest4j.reporting:{/,}**',
      ],
    },
    {
      matchManagers: 'npm',
      matchPackageNames: [
        '@antora/assembler',
        '@antora/html-single-extension',
        '@antora/pdf-extension',
      ],
      "groupName": "@antora/assembler",
    },
  ],
}
